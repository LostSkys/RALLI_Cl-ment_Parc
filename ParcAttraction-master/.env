# ============================================
# PARC D'ATTRACTION - VARIABLES D'ENVIRONNEMENT
# ============================================
# Copier ce fichier en .env et ajuster les valeurs

# ============================================
# UTILISATEUR (pour droits fichiers dans containers)
# ============================================
MY_UID=1000
MY_GID=1000

# ============================================
# BASE DE DONNÉES
# ============================================
MYSQL_ROOT_PASSWORD=mysqlroot
MYSQL_DATABASE=parc
MYSQL_USER=mysqlusr
MYSQL_PASSWORD=mysqlpwd

# ============================================
# FLASK / PYTHON
# ============================================
FLASK_APP=app:app
FLASK_ENV=development
FLASK_DEBUG=1

# ============================================
# JWT SECRET (IMPORTANT: Changer en production!)
# ============================================
JWT_SECRET_KEY=votre_clé_secrète_très_longue_et_complexe_ici

# ============================================
# TIMEZONE
# ============================================
TZ=Europe/Paris

# ============================================
# PORTS (si conflit, changer ici)
# ============================================
WEB_PORT=4200
API_PORT=5000
DB_PORT=3306
NGINX_HTTPS_PORT=443
NGINX_HTTP_PORT=80
